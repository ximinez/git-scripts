# Include this in your main ~/.gitconfig file by adding
# [include]
#   path = <path to this file>
# If you run the `install` script (and it works) the path to this file
# will be .gitconfig-include
#
# Some of these are just my default preferences. You can override them
# by setting different values after the `[include]`.

[core]
  excludesfile = ~/.gitignore_global
  attributesfile = ~/.gitattributes
  hookspath = ~/.git/hooks
[diff]
  submodule = log
[color]
  ui = auto
[color "branch"]
    current = green reverse
    local = cyan
    remote = white
[color "diff"]
  new = green italic
  old = red strike
[color "status"]
  changed = yellow
  added  = cyan
[branch "*branch-name*"]
  rebase = true
[branch]
  autosetuprebase = always
[checkout]
  defaultRemote = origin
[fetch]
  parallel = 0
[worktree]
  useRelativePaths = true

# From https://blog.gitbutler.com/how-git-core-devs-configure-git/
#
# clearly makes git better

[column]
        ui = auto
[branch]
        sort = -committerdate
[tag]
        sort = version:refname
[init]
        defaultBranch = main
[diff]
        algorithm = histogram
        colorMoved = plain
        mnemonicPrefix = true
        renames = true
[push]
        default = simple
        # Doesn't always use the desired remote
        # autoSetupRemote = true
        # Pushes tags from other remotes, which isn't what I want if
        # they have junk
        # followTags = true
[fetch]
        prune = true
        # pruneTags = true
        all = true

# why the hell not?

[help]
        autocorrect = prompt
[commit]
        verbose = true
[rerere]
        enabled = true
        autoupdate = true
[core]
        excludesfile = ~/.gitignore
[rebase]
        autoSquash = true
        autoStash = true
        updateRefs = true

# a matter of taste (uncomment if you dare)

[core]
        fsmonitor = true
        untrackedCache = true
[merge]
        # (just 'diff3' if git version < 2.3)
        # conflictstyle = zdiff3
        # Until I upgrade one of my older boxes, use diff3, and override
        # with zdiff3 locally everywhere else
        conflictstyle = diff3
[pull]
        rebase = true
